      "Bash(rm *)",
      "Bash(touch *)",
      "Bash(sleep *)",
      "Bash(date *)",
      "Bash(curl *)",
      "Bash(supabase *)",
      "Bash(tsx *)",
      "Read",
      "Write",
      "Edit",
