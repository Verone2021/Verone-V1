{
  "enableAllProjectMcpServers": true,
  "enabledMcpServers": [
    "serena",
    "playwright-lane-1",
    "playwright-lane-2",
    "context7",
    "magic",
    "supabase"
  ],
  "statusLine": {
    "type": "command",
    "command": "/Users/romeodossantos/verone-back-office-V1/.claude/scripts/statusline.sh",
    "padding": 0
  },
  "PreToolUse": [
    {
      "matcher": "Bash(git commit*)",
      "hooks": [{
        "type": "command",
        "command": "bash -c 'BRANCH=$(git branch --show-current); if [ \"$BRANCH\" = \"main\" ]; then echo \"❌ INTERDIT commit sur main\"; exit 1; fi; if ! echo \"$TOOL_INPUT\" | grep -qE \"\\[(BO|LM|WEB)-[A-Z]+-[0-9]{3}\\]|\\[NO-TASK\\]\"; then echo \"❌ Task ID requis: [APP-XXX-001]\"; exit 1; fi'"
      }]
    },
    {
      "matcher": "Edit(*middleware*)",
      "hooks": [{
        "type": "command",
        "command": "echo '⚠️ MIDDLEWARE CRITIQUE - Vérifier patterns existants avant modification' && exit 0"
      }]
    },
    {
      "matcher": "Edit(*_rls_*)",
      "hooks": [{
        "type": "command",
        "command": "echo '⚠️ RLS CRITIQUE - Approbation requise pour migrations auth' && exit 0"
      }]
    }
  ],
  "Stop": [{
    "hooks": [{
      "type": "command",
      "command": "$CLAUDE_PROJECT_DIR/.claude/scripts/task-completed.sh"
    }]
  }],
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(pnpm *)",
      "Bash(npx *)",
      "Bash(bun *)",
      "Bash(gh *)",
      "Bash(node *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(grep *)",
      "Bash(find *)",
      "Bash(tree *)",
      "Bash(pwd)",
      "Bash(echo *)",
      "Bash(which *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(rm *)",
      "Bash(touch *)",
      "Bash(sleep *)",
      "Bash(date *)",
      "Bash(curl *)",
      "Bash(supabase *)",
      "Bash(tsx *)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebSearch",
      "WebFetch",
      "Task",
      "TodoWrite",
      "mcp__*"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(sudo *)"
    ]
  }
}
