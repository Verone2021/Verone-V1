# =========================
# ENVIRONMENT VARIABLES
# =========================
# Rename this file to `.env` and fill in the missing values.
# Do NOT commit your `.env` file to a public repository.

# ---------- SUPABASE ----------
# Public anon key (read-only) — used for frontend operations
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (full access) — keep private, used by MCP server
SUPABASE_ACCESS_TOKEN=your-service-role-key-here

# Local development URL for Supabase Studio
SUPABASE_STUDIO_URL=http://127.0.0.1:54323

# ---------- GITHUB ----------
# Create a personal access token with 'repo' and 'workflow' scopes
GITHUB_TOKEN=

# ---------- VERCEL ----------
# Create a token in Vercel account settings
VERCEL_API_TOKEN=

# ---------- NOTION ----------
# Create an integration in Notion and copy the API key here
NOTION_API_KEY=

# =========================
# OPTIONAL SETTINGS
# =========================

# NODE_ENV can be: development | production
NODE_ENV=development