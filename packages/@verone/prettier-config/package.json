{
  "name": "@verone/prettier-config",
  "version": "1.0.0",
  "description": "Configuration Prettier partagée pour le monorepo Vérone (Recommended 2025)",
  "main": "index.json",
  "author": "Romeo Dos Santos",
  "license": "MIT",
  "keywords": [
    "prettier",
    "prettierconfig",
    "formatting",
    "verone"
  ],
  "peerDependencies": {
    "prettier": "^3.0.0"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./hooks": {
      "types": "./src/hooks/index.ts",
      "import": "./src/hooks/index.ts",
      "require": "./src/hooks/index.ts"
    },
    "./components/*": {
      "types": "./src/components/*/index.ts",
      "import": "./src/components/*/index.ts",
      "require": "./src/components/*/index.ts"
    }
  }
}
