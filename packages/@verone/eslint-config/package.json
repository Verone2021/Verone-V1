{
  "name": "@verone/eslint-config",
  "version": "1.0.0",
  "description": "Configuration ESLint partagée pour le monorepo Vérone (Strict TypeScript + Prettier)",
  "main": "index.js",
  "author": "Romeo Dos Santos",
  "license": "MIT",
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript",
    "nextjs",
    "prettier",
    "verone"
  ],
  "peerDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-storybook": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./hooks": {
      "types": "./src/hooks/index.ts",
      "import": "./src/hooks/index.ts",
      "require": "./src/hooks/index.ts"
    },
    "./components/*": {
      "types": "./src/components/*/index.ts",
      "import": "./src/components/*/index.ts",
      "require": "./src/components/*/index.ts"
    }
  }
}
