  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "author": "Romeo Dos Santos",
  "license": "MIT",
  "keywords": [
    "kpi",
    "metrics",
    "yaml",
    "verone"
  ],
  "devDependencies": {
