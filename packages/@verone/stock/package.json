{
  "name": "@verone/stock",
  "version": "1.0.0",
  "description": "Module Stock pour le système Vérone CRM/ERP - Composants UI et hooks business pour gestion des stocks, mouvements, inventaires et alertes",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "verone",
    "stock",
    "inventory",
    "movements",
    "alerts"
  ],
  "author": "Romeo Dos Santos",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@verone/ui": "workspace:*",
    "@verone/utils": "workspace:*",
    "@verone/types": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.3.3"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./hooks": {
      "types": "./src/hooks/index.ts",
      "import": "./src/hooks/index.ts",
      "require": "./src/hooks/index.ts"
    },
    "./components/*": {
      "types": "./src/components/*/index.ts",
      "import": "./src/components/*/index.ts",
      "require": "./src/components/*/index.ts"
    }
  }
}
