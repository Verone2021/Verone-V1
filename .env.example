# =========================
# ENVIRONMENT VARIABLES TEMPLATE
# =========================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# ---------- GITHUB ----------
# BEST PRACTICE: Utiliser GH_TOKEN (standard GitHub CLI) pour gh CLI et MCP GitHub
# Generate token at: https://github.com/settings/tokens
# Required permissions: repo, workflow
# Documentation: https://support.claude.com/en/articles/12304248
GH_TOKEN=ghp_your_github_token_here

# ---------- VERCEL ----------
# Vercel API token for deployments
# Generate at: https://vercel.com/account/tokens
VERCEL_TOKEN=your_vercel_token_here

# ---------- NOTION ----------
# Notion API key for documentation integration (optional)
# NOTION_API_KEY=secret_your_notion_key_here

# ---------- SUPABASE ----------
# Supabase project configuration
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# SECURITY ALERT: Service role key should NEVER be exposed client-side
# This should only be used in server-side code or Edge Functions
SUPABASE_ACCESS_TOKEN=your_supabase_access_token_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Connection (Session Pooler)
DATABASE_URL=postgresql://postgres.your-project:password@aws-region.pooler.supabase.com:5432/postgres

# ---------- REF TOOLS ----------
# REF API key for product references
REF_API_KEY=ref-your-api-key-here

# ---------- GOOGLE MERCHANT CENTER ----------
# SECURITY: Service Account credentials for Google Merchant API
# Instructions:
# 1. Go to Google Cloud Console > IAM & Admin > Service Accounts
# 2. Create service account for "VÃ©rone Google Merchant Integration"
# 3. Download JSON key file
# 4. Extract email and private_key fields
GOOGLE_MERCHANT_SERVICE_ACCOUNT_EMAIL=verone-merchant@your-project.iam.gserviceaccount.com
GOOGLE_MERCHANT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# ---------- APPLICATION ----------
NEXT_PUBLIC_APP_URL=https://verone.com

# ---------- SENTRY ----------
# SECURITY: Sentry monitoring and error tracking
# Generate tokens at: https://sentry.io/settings/account/api/auth-tokens/

# Personal Auth Token for API access
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# Organization Token for MCP OAuth
SENTRY_ORGANIZATION_TOKEN=your_sentry_org_token_here

# Bearer Token for MCP Sentry API
SENTRY_BEARER_TOKEN=your_sentry_bearer_token_here

# Sentry Organization and Project
SENTRY_ORG=your-org-name
SENTRY_PROJECT=your-project-name

# Server-side DSN (without NEXT_PUBLIC_)
SENTRY_DSN=https://your-key@your-region.ingest.sentry.io/your-project-id

# Sentry Region Configuration
SENTRY_REGION_URL=https://your-region.sentry.io

# Client-side Sentry DSN for error reporting
NEXT_PUBLIC_SENTRY_DSN=https://your-key@your-region.ingest.sentry.io/your-project-id

# Sentry release and version tracking
NEXT_PUBLIC_SENTRY_RELEASE=verone-back-office@1.0.0
NEXT_PUBLIC_APP_VERSION=1.0.0
SENTRY_RELEASE=verone-back-office@1.0.0
SENTRY_PROJECT_ID=your-project-id

# ---------- NODE ENV ----------
NODE_ENV=development

# =========================
# ðŸš€ FEATURE FLAGS - DÃ‰PLOIEMENT PROGRESSIF
# =========================
# Control feature availability by phase

# Phase 1: Dashboard + Profiles + Catalogue Complet
NEXT_PUBLIC_PHASE_1_ENABLED=true
NEXT_PUBLIC_DASHBOARD_ENABLED=true
NEXT_PUBLIC_PROFILES_ENABLED=true
NEXT_PUBLIC_CATALOGUE_ENABLED=true

# Phase 2: Stocks + Sourcing + Commandes (INACTIFS pour Phase 1)
NEXT_PUBLIC_PHASE_2_ENABLED=false
NEXT_PUBLIC_STOCKS_ENABLED=false
NEXT_PUBLIC_SOURCING_ENABLED=false
NEXT_PUBLIC_COMMANDES_ENABLED=false

# Phase 3: Interactions + Canaux + Contacts (INACTIFS pour Phase 1)
NEXT_PUBLIC_PHASE_3_ENABLED=false
NEXT_PUBLIC_INTERACTIONS_ENABLED=false
NEXT_PUBLIC_CANAUX_VENTE_ENABLED=false
NEXT_PUBLIC_CONTACTS_ENABLED=false

# Modules SpÃ©ciaux (toujours actifs)
NEXT_PUBLIC_ADMIN_ENABLED=true
NEXT_PUBLIC_PARAMETRES_ENABLED=true
NEXT_PUBLIC_TESTS_MANUELS_ENABLED=true

# Feature Flags SpÃ©cifiques
NEXT_PUBLIC_PHOTO_UPLOAD_WORKFLOW_ENABLED=true
NEXT_PUBLIC_GOOGLE_MERCHANT_SYNC_ENABLED=true
NEXT_PUBLIC_MCP_MONITORING_ENABLED=true

# ---------- DEVELOPMENT WARNINGS SUPPRESSION ----------
# Suppress Node.js deprecation warnings for cleaner console output
NODE_OPTIONS="--no-deprecation"

# Suppress Sentry warnings during development
SENTRY_SUPPRESS_GLOBAL_ERROR_HANDLER_FILE_WARNING=1

# Suppress Next.js experimental warnings
NEXT_SUPPRESS_STRICT_MODE_WARNINGS=1
